# Environment Variables Configuration

# ======================
# LLM Provider Settings
# ======================

# Default LLM provider (qwen2_local | deepseek | openai)
DEFAULT_LLM_PROVIDER=qwen2_local

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# Local Qwen2 Model Path
QWEN2_MODEL_PATH=Qwen/Qwen2-1.5B-Instruct
QWEN2_DEVICE=cpu

# ======================
# Application Settings
# ======================

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ======================
# File Storage
# ======================

# Upload Directory
UPLOAD_DIR=./uploads

# Output Directory
OUTPUT_DIR=./output

# Models Cache Directory
MODELS_DIR=./models

# Logs Directory
LOGS_DIR=./logs

# Maximum Upload File Size (in bytes)
MAX_UPLOAD_SIZE=2147483648  # 2GB

# ======================
# Processing Settings
# ======================

# Whisper Model Size (tiny | base | small | medium | large)
WHISPER_MODEL=medium

# Use GPU for Whisper (true | false)
WHISPER_USE_GPU=false

# LLM Correction Batch Size
LLM_BATCH_SIZE=15

# Maximum Concurrent Tasks
MAX_CONCURRENT_TASKS=3

# Task Timeout (in seconds)
TASK_TIMEOUT=3600  # 1 hour

# ======================
# CUDA/GPU Settings
# ======================

# CUDA Visible Devices (comma-separated GPU IDs)
CUDA_VISIBLE_DEVICES=0

# Hugging Face Home Directory
HF_HOME=/root/.cache/huggingface

# Transformers Cache Directory
TRANSFORMERS_CACHE=/root/.cache/transformers

# ======================
# Logging
# ======================

# Log Level (DEBUG | INFO | WARNING | ERROR | CRITICAL)
LOG_LEVEL=INFO

# Log to File (true | false)
LOG_TO_FILE=true

# Log File Path
LOG_FILE=./logs/app.log

# ======================
# Security (Optional)
# ======================

# API Key for authentication (leave empty to disable)
API_KEY=

# JWT Secret Key (for user authentication)
JWT_SECRET=

# ======================
# Development Settings
# ======================

# Enable Debug Mode (true | false)
DEBUG=false

# Enable API Documentation (true | false)
ENABLE_DOCS=true

# Enable Profiling (true | false)
ENABLE_PROFILING=false

# ======================
# Docker-Specific
# ======================

# Docker Build Environment (development | production)
BUILD_ENV=production

# ======================
# Advanced Settings
# ======================

# FFmpeg Path (leave empty to use system PATH)
FFMPEG_PATH=

# FFmpeg Threads
FFMPEG_THREADS=4

# Evaluation Enabled (true | false)
EVALUATION_ENABLED=true

# Memory Management (true | false)
MEMORY_MANAGEMENT_ENABLED=true

# Maximum Memory History (number of records)
MAX_MEMORY_RECORDS=1000
